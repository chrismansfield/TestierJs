{
  "name": "testier",
  "version": "1.0.0-alpha1",
  "description": "Making your tests testier!",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrismansfield/TestierJs.git"
  },
  "author": "Christoffer Mansfield",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint \"src/**/*.js\" \"tests/**/*.js\"",
    "lint-fix-all": "eslint --fix \"src/**/*.js\" \"tests/**/*.js\"",
    "precommit": "lint-staged",
    "prepush": "jest",
    "build": "gulp build",
    "autofix": "onchange '**/*.js' -- eslint {{changed}} --fix",
    "prepublishOnly": "yarn lint && yarn test && yarn build"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },  
  "files": [
    "**/dist/*"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "del": "^3.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-import-resolver-alias": "^1.0.3",
    "eslint-plugin-import": "2.7.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-babel": "^1.0.1",
    "lint-staged": "^4.2.3",
    "onchange": "^3.2.1"
  }
}